{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EC2ManagementPermissions",
      "Effect": "Allow",
      "Action": [
        "ec2:StartInstances",
        "ec2:StopInstances",
        "ec2:DescribeInstances",
        "ec2:ModifyInstanceAttribute"
      ],
      // For production, replace the placeholder below with specific instance ARNs
      // or use condition keys like "ec2:ResourceTag" to scope access to tagged instances.
      "Resource": "arn:aws:ec2:REGION:ACCOUNT_ID:instance/INSTANCE_ID"
    },
    {
      "Sid": "CloudWatchLogsPermissions",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:*:*:log-group:/aws/lambda/ec2-manager:*"
    }
  ]
}
